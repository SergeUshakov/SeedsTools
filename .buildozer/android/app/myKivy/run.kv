
<Run>:
    FloatLayout:

        ProgressBar:
            id: pb
            pos_hint: {'right':1.0, 'top':1.0}
            #size_hint: (0.75, 0.1)
            max:100
            value:10
        ProgressBar:
            id: pb1
            pos_hint: {'right':1.0, 'top':1.05}
            #size_hint: (0.75, 0.1)
            max:100
            value:10
        ProgressBar:
            id: pb2
            pos_hint: {'right':1.0, 'top':1.1}
            #size_hint: (0.75, 0.1)
            max:100
            value:10

    BoxLayout:
        orientation: 'vertical'

        Button:
            id: run
            text: 'Run'
            size_hint: None, None
            size: 200, 60
            pos_hint: {'right': 1}

            on_press:
                root.update_bar()
        Button:
            id: on_run
            text: 'On Run'
            size_hint: None, None
            size: 200, 60
            pos_hint: {'right': 1}

            on_press:
                root.on_update_bar()

        Button:
            text: 'Back to menu'
            size_hint: None, None
            size: 200, 60
            pos_hint: {'right': 1}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'




