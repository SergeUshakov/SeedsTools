<Settings>:

    Image:
        source: 'data/seeds.png'
        pos_hint: {'center_x':.5,'center_y':.7}
        size_hint: 1,.9

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Save settings'
            size_hint: None, None
            size: 200, 60
            pos_hint: {'right': 1}
        Button:
            text: 'Back to menu'
            size_hint: None, None
            size: 200, 60
            pos_hint: {'right': 1}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Wheat'
            size_hint: None, None
            size: 150, 60
            pos_hint: {'left': 1}
        Button:
            text: 'Barley'
            size_hint: None, None
            size: 150, 60
            pos_hint: {'left': 1}
        Button:
            text: 'Corn'
            size_hint: None, None
            size: 150, 60
            pos_hint: {'left': 1}
        Button:
            text: 'Sunflower'
            size_hint: None, None
            size: 150, 60
            pos_hint: {'left': 1}
        Button:
            text: 'Peas'
            size_hint: None, None
            size: 150, 60
            pos_hint: {'left': 1}

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Number of Seeding Points'
            size_hint: None, None
            size: 300, 60
            pos_hint: {'top': 1}
            markup: True
            shorten: True
            color: 1, 1 ,1 , 1
            canvas.before:
                Color:
                    rgba: 0.35, 0.35, 0.35, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        TextInput:
            id: input
            text: "12"
            font_size: 40
            size_hint: None, None
            size: 60, 60
            pos_hint: {'top': 1}
            multiline: False
            on_text_validate: root.on_enter()


